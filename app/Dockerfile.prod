FROM node:current-alpine

LABEL authors = "akolt19d,botprzemek,nozowymrozon,pawelos231"

ARG NUXT_APP_URL
ARG NUXT_MAIL_URL

ENV NUXT_APP_URL ${NUXT_APP_URL}
ENV NUXT_MAIL_URL ${NUXT_MAIL_URL}

WORKDIR /app

COPY package*.json .

RUN npm install --omit=dev

COPY . .

RUN npm run build

CMD ["node", ".output/server/index.mjs"]

EXPOSE 3000
